<div class="container-payment">
  <%= form_tag product_charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <p>PRODUCT: <%= @product.description %>  </p>
        <p>TOTAL: <%= @product.price %>  </p>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" id="my-stripe-button" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="LOOKING GOOD RIGHT NOW!"
            data-amount=<%= "#{@product.price.to_i * 100 }"%>
            data-locale="auto"></script>
  <% end %>
</div>
