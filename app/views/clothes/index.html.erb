<h1>Clothes#index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Status</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothes.each do |cloth| %>
      <tr>
        <td><%= cloth.description %></td>
        <td><%= cloth.category %></td>
        <td><%= cloth.status %></td>
        <td><%= cloth.price %></td>
        <td><%= link_to 'Show', clothe %></td>
        <td><%= link_to 'Edit', edit_clothe_path(cloth) %></td>
        <td><%= link_to 'Delete', clothe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Add New Cloth', new_clothe_path, class: 'btn btn-primary' %>

