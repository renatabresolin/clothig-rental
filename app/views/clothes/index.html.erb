<nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
  <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup ">
    <div class="navbar-nav ">
      <%= link_to 'Add New Cloth', new_clothe_path, class: "nav-item nav-link active" %>
      <%#= link_to 'My Rentals', new_clothe_path, class: "nav-item nav-link active" %>
    </div>
  </div>
</nav>

<div class="card-deck">
  <% @clothes.each do |cloth| %>
  <div class="card">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= cloth.description %></h5>
      <p class="card-text"><%= cloth.price %></p>
    </div>
      <%= link_to 'Show', clothe %>
      <%= link_to 'Edit', edit_clothe_path(cloth) %>
      <%= link_to 'Delete', clothe, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>







