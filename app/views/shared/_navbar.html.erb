<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to "/products", class: "navbar-brand" do %>
    <%= image_tag "logotipo.png"%>
  <% end %>
  <ul class="navbar-nav mr-auto">
    <% unless current_user %>
       <li class="nav-item"><strong>
        <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </strong></li>
        <li class="nav-item"><strong>
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </strong></li>
    <% end %>
  </ul>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><strong>
        <%= link_to "Products", "/products", class: "nav-link" %>
      </strong></li>
      <li class="nav-item"><strong>
        <%= link_to "New product", "/products/new", class: "nav-link"  %>
      </strong></li>
      <li class="nav-item"><strong>
        <%= link_to "/rentals", class: "nav-link" do %>
          <i class="fas fa-shopping-bag"></i>
        <% end %>
      </strong></li>



      <% if current_user %>
          <li class="nav-item"><strong>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link"  %>
          </strong></li>

        <li class="nav-item">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, transformation: [{width: 55, height: 55, gravity: "face", radius: "max", crop: "fill", quality: 80}, {width: 55, crop: "scale"}], class: "avatar"%>
              <% else  %>
              <%= image_tag 'logo.png', class: "avatar-large" %>
            <% end %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
